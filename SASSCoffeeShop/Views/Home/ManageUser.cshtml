            url: 'http://' + PORT + '/sas/sas_server/study/video/getAll',
            success: function (resp) {
                if (resp.statuskey == true) {
                    var oTable = $('#datatableVideo').dataTable();
                    oTable.fnClearTable();

                    resp.data.forEach(addTableVideoData);
                } else {
                    swal(
                        'Thất bại',
