
@{
    ViewBag.Title = "SplashNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * { box-sizing:border-box; }
    .container 		{ 
      font-family:'Roboto';
      width:600px; 
      margin:30px auto 0; 
      display:block; 
      background:#FFF;
      padding:10px 50px 50px;
    }
    h2 		 { 
      text-align:center; 
      margin-bottom:50px; 
    }
    h2 small { 
      font-weight:normal; 
      color:#888; 
      display:block; 
    }
    .footer 	{ text-align:center; }
    .footer a  { color:#53B2C8; }

    /* form starting stylings ------------------------------- */
    .group 			  { 
      position:relative; 
      margin-bottom:45px; 
    }
    input 				{
      font-size:18px;
      padding:10px 10px 10px 5px;
      display:block;
      width:600px;
      border:none;
      border-bottom:1px solid #757575;
    }
    input:focus 		{ outline:none; }

    /* LABEL ======================================= */
    label 				 {
      color:#999; 
      font-size:18px;
      font-weight:normal;
      position:absolute;
      pointer-events:none;
      left:5px;
      top:10px;
      transition:0.2s ease all; 
      -moz-transition:0.2s ease all; 
      -webkit-transition:0.2s ease all;
    }

    /* active state */
    input:focus ~ label, input:valid ~ label 		{
      top:-20px;
      font-size:14px;
      color:#2f82c3;
    }

    /* BOTTOM BARS ================================= */
    .bar 	{ position:relative; display:block; width:600px; }
    .bar:before, .bar:after 	{
      content:'';
      height:2px; 
      width:0;
      bottom:1px; 
      position:absolute;
      background:#2f82c3; 
      transition:0.2s ease all; 
      -moz-transition:0.2s ease all; 
      -webkit-transition:0.2s ease all;
    }
    .bar:before {
      left:50%;
    }
    .bar:after {
      right:50%; 
    }

    /* active state */
    input:focus ~ .bar:before, input:focus ~ .bar:after {
      width:50%;
    }

    /* HIGHLIGHTER ================================== */
    .highlight {
      position:absolute;
      height:60%; 
      width:100px; 
      top:25%; 
      left:0;
      pointer-events:none;
      opacity:0.5;
    }

    /* active state */
    input:focus ~ .highlight {
      -webkit-animation:inputHighlighter 0.3s ease;
      -moz-animation:inputHighlighter 0.3s ease;
      animation:inputHighlighter 0.3s ease;
    }

    /* ANIMATIONS ================ */
    @@-webkit-keyframes inputHighlighter {
	    from { background:#2f82c3; }
      to 	{ width:0; background:transparent; }
    }
    @@-moz-keyframes inputHighlighter {
	    from { background:#2f82c3; }
      to 	{ width:0; background:transparent; }
    }
    @@keyframes inputHighlighter {
	    from { background:#2f82c3; }
      to 	{ width:0; background:transparent; }
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <br />
                        <div class="row">
                            <div class="col-md-offset-1">
                                <form>
                                    <div class="group">
                                        <input type="text"  id="gnews" >
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>G</label>
                                    </div>

                                    <div class="group">
                                        <input type="text"  id="snews" >
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>S</label>
                                    </div>

                                    <div class="group">
                                        <input type="text" id="tnews" >
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>T</label>
                                    </div>
                                </form> 
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-5">
                                <div class="typo-line">
                                    <div class="form-group">
                                        <button class="btn btn-default" type="submit" id="submitBtn">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $('#brand').text('Splash News');

    $(document).keypress(function (e) {
        if (e.which == 13) {
            $('#submitBtn').click();
        }
    });

    $(document).ready(function () {
        //call G
        $.ajax({
            type: 'GET',
            url: 'http://35.185.147.78/sas/sas_server/user/getNews/G',
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    //alert(resp.message)
                    $('#gnews').text(resp.news);
                    $('#gnews').val(resp.news);
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
        //call T
        $.ajax({
            type: 'GET',
            url: 'http://35.185.147.78/sas/sas_server/user/getNews/T',
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    //alert(resp.message)
                    $('#tnews').text(resp.news);
                    $('#tnews').val(resp.news);
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
        //call S
        $.ajax({
            type: 'GET',
            url: 'http://35.185.147.78/sas/sas_server/user/getNews/S',
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    //alert(resp.message)
                    $('#snews').text(resp.news);
                    $('#snews').val(resp.news);
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
    });

    document.getElementById("submitBtn").onclick = function () {
        $('#loader').show();
        $(':button').prop('disabled', true);
        var vurl = 'http://35.185.147.78/sas/sas_server/admin/updateSplashNews/' + '@Session["loggedToken"].ToString()';

        var res_g = {
            userType: "G",
            news: $('#gnews').val()
        };

        var res_s = {
            userType: "S",
            news: $('#snews').val()
        };

        var res_t = {
            userType: "T",
            news: $('#tnews').val()
        };

        $(document).keypress(function (e) {
            if (e.which == 13) {
                $('#submitBtn').click();
            }
        });

        //update G
        $.ajax({
            type: 'POST',
            url: vurl,
            data: JSON.stringify(res_g),
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    swal(
                        'Thành công',
                        resp.message,
                        'success'
                    );
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
        //update S
        $.ajax({
            type: 'POST',
            url: vurl,
            data: JSON.stringify(res_s),
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    swal(
                        'Thành công',
                        resp.message,
                        'success'
                    );
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
        //update T
        $.ajax({
            type: 'POST',
            url: vurl,
            data: JSON.stringify(res_t),
            success: function (resp) {
                if (resp.statuskey == true) {
                    $(':button').prop('disabled', false);
                    swal(
                        'Thành công',
                        resp.message,
                        'success'
                    );
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
        $('#loader').hide();
    };
</script>