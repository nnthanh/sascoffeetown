
@{
    ViewBag.Title = "EventList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Modal-->
<link rel="stylesheet" href="~/Content/css/modal.css">
<!-- Modal -->
<script src="~/Content/js/modal.js"></script>

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4>Chi nhánh</h4>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="typo-line">                                  
                                    <div class="form-group">
                                        <p class="category">Tên</p>
                                        <div class="dropdown">
                                            <input class="dropdown-toggle form-control border-input" id="branch" readonly data-toggle="dropdown" type="text" required="required" />
                                            <ul class="dropdown-menu" id="branch_ul"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card" style="z-index:0;">
                    <div class="card-content">
                        
                        <!--Table dynamic-->
                        <div class="x_panel" style="padding:20px">
                            <h4>Events</h4>
                            <div class="x_content">
                                <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>End date</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div><!--  end card  -->
            </div> <!-- end col-md-12 -->
        </div> <!-- end row -->
    </div>
</div>

<div class="modal-frame">
    <div class="modal" style="left: 45%;right:5%;">
        <div class="modal-inset" id="detailModal">
            <div class="button close"><i class="fa fa-close"></i></div>

            <div class="modal-body" style="max-height:calc(100vh - 210px);overflow-y:auto;">
                <h3>Người tham dự</h3>
                <table id="modaltable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-overlay"></div>

<script>
    $('#brand').text('Event list');
    var branchid;
    var tableData;
    $(document).ready(function () {
        $('#datatable').dataTable();
        $.ajax({
            type: 'GET',
            url: 'http://35.185.147.78/sas/sas_server/branch/getAll',
            success: function (resp) {
                if (resp.statuskey == true) {

                    resp.branchList.forEach(function (entry) {
                        $('#branch_ul').append('<li><a onclick="branchOnChange(' + "'" + entry.name + "','" + entry.id + "'" + ')">' + entry.name + '</a></li>');
                    });
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });

        $('#datatable tbody').on('click', 'tr', function () {
            var table = $('#datatable').DataTable();

            if (table.row(this).data()[3] != null) {
                $.ajax({
                    type: 'GET',
                    url: 'http://35.185.147.78/sas/sas_server/promo/event/' + table.row(this).data()[3] + '/members',
                    success: function (resp) {
                        if (resp.statuskey == true) {
                            var oTable = $('#modaltable').dataTable();
                            oTable.fnClearTable();

                            resp.members.forEach(addModalTable);
                        } else {
                            swal(
                                'Thất bại',
                                resp.message,
                                'error'
                            );
                            $(':button').prop('disabled', false);
                        }
                    },
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8'
                });

                $overlay.addClass('state-show');
                $modal.removeClass('state-leave').addClass('state-appear');
            }         
        });

        $(document).keyup(function (e) {
            if (e.keyCode == 27) { // escape key maps to keycode `27`
                $overlay.removeClass('state-show');
                $modal.removeClass('state-appear').addClass('state-leave');
            }
        });
    });

    function branchOnChange(value, id) {
        branchid = id;
        $('#branch').text('' + value);
        $('#branch').val(value);

        $.ajax({
            type: 'GET',
            url: 'http://35.185.147.78/sas/sas_server/promo/branch/' + branchid,
            success: function (resp) {
                if (resp.statuskey == true) {
                    var oTable = $('#datatable').dataTable();
                    oTable.fnClearTable();

                    tableData = resp.events;
                    tableData.forEach(addTableData);
                } else {
                    swal(
                        'Thất bại',
                        resp.message,
                        'error'
                    );
                    $(':button').prop('disabled', false);
                }
            },
            dataType: 'json',
            contentType: 'application/json; charset=utf-8'
        });
    }

    function addModalTable(item, index) {
        $('#modaltable').dataTable().fnAddData([
        item.name,
        item.phone]);
    };

    function addTableData(item, index) {
        $('#datatable').dataTable().fnAddData([
        item.name,
        item.dateExpired,
        item.description,
        item.id]);
    };
</script>